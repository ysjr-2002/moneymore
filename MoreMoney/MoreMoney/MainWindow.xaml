<Window x:Class="MoreMoney.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MoreMoney"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="500"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="24" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Margin" Value="5,0,0,0" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Width" Value="80" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="5"
                    Orientation="Horizontal">
            <Label Content="选层器串口:" />
            <ComboBox Name="cmbPorts" Width="100" />
            <Button Name="btnOpenPort"
                    Click="btnOpenPort_Click"
                    Content="打开" />
        </StackPanel>

        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="btnReset"
                    Click="btnReset_Click"
                    Content="Reset" />

            <Button Name="btnReadId"
                    Click="btnReadId_Click"
                    Content="Read caseete id" />

            <Button Name="btnOpenCassette"
                    Click="btnOpenCassette_Click"
                    Content="OpenCassette" />

            <Button 
                    Click="btnCloseCassette_Click"
                    Content="CloseCassette" />

            <Button 
                    Click="btnReadProgram_Click"
                    Content="ReadProgram" />

            <Button 
                    Click="btnReadCounter_Click"
                    Content="ReadCounter" />

            <Button 
                    Click="btnSelfTest_Click"
                    Content="SelfTest" />
        </WrapPanel>

        <RichTextBox Name="log" Grid.Row="2"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
            <RichTextBox.Resources>
                <Style TargetType="RichTextBox">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="Foreground" Value="Green" />
                </Style>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="1,2" />
                </Style>
            </RichTextBox.Resources>
            <FlowDocument />
        </RichTextBox>
    </Grid>
</Window>
